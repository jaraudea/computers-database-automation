{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "typeScript",
        "typeRoots": [ "./node_modules/@types"],
        "types": ["node","cucumber"]
    },
    "include": [
        "test"
    ],
    "exclude": [
        "node_modules",
        "typescript"
    ]
}